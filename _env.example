# Este archivo contiene las variables de entorno necesarias para la configuración
# de los servicios y bases de datos del proyecto.
# Renombra este archivo a ".env" y ajusta los valores según sea necesario.
 
# --- CONFIGURACIÓN GENERAL Y DE SEGURIDAD ---
 
# Clave secreta para firmar y validar los tokens JWT.
# ¡DEBE ser una cadena larga y aleatoria en producción!
JWT_SECRET=your_super_secret_and_long_random_string
 
# Clave secreta para las sesiones de Flask en el frontend.
FLASK_SECRET_KEY=another_super_secret_for_flask_sessions
 
# URL del API Gateway. El frontend se conectará a esta dirección.
API_GATEWAY_URL=http://api-gateway:8000
 
# --- SERVICIO DE USUARIOS (users) ---
 
# La URL de la base de datos de usuarios (MongoDB).
# El host 'users-db' coincide con el servicio en docker-compose.yml.
DATABASE_URL=mongodb://users-db:27017/users_db
 
# --- SERVICIO DE PUBLICACIONES (posts/service1) ---
 
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=posts_db
 
# --- SERVICIO DE ACTIVIDADES (activities) ---
 
ACTIVITIES_POSTGRES_USER=user
ACTIVITIES_POSTGRES_PASSWORD=password
ACTIVITIES_POSTGRES_DB=activities_db
 
# --- SERVICIO DE EVENTOS (events) ---
 
EVENTS_POSTGRES_USER=user
EVENTS_POSTGRES_PASSWORD=password
EVENTS_POSTGRES_DB=events_db
 
# --- SERVICIO SOCIAL (social) ---
 
SOCIAL_POSTGRES_USER=user
SOCIAL_POSTGRES_PASSWORD=password
SOCIAL_POSTGRES_DB=social_db
 
# --- OTRAS CONFIGURACIONES ---
 
# Controla si SQLAlchemy muestra las sentencias SQL (true/false). Útil para debug.
SQLALCHEMY_ECHO=false
